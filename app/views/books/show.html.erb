<main>
  <div class='container px-5 px-sm-0'>
  <div class='row'>

    
    
    <div class='col-md-3'>
           <p id="notice"></p>
    <%= render '/books/list', user: @book.user %>
</div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table table-hover table-inverse'>
  <thead>
  </thead>
  <tbody>
  <tr>
    <td>
        <%= image_tag @book.user.get_profile_image(100,100) %>
    </td>
    <td>
        <%= link_to book_path(params[:id])do %>
      <%= @book.title %> 
    <% end %>
    </td>
    <td><%= @book.body %>
    </td>
      <% if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book.id) ,class: "btn btn-success" %>
    </td>
    <td><%= link_to "Destroy", destroy_book_path(@book.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </td>
      <% end %>
    </tr>
      </tbody>
</table>
    <%= link_to user_path(@book.user.id) do %>
      <%= @book.user.name %>
    <% end %>
</div>
  </div>
</div>
</main>    