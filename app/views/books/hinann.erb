<div>
  <p>本のタイトル：<%= @books.title %></p>
  <p>感想：<%= @books.body %></p>
  <p>投稿ユーザー画像：<%= image_tag post_comment.user.get_profile_image(100,100) %>
  <p>ユーザーネーム：<%= @books.user.name %></p>
  <p>投稿日：<%= @books.created_at.strftime('%Y/%m/%d') %></p>
</div>



<main>
  <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
    <%= render '/books/list', user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table table-hover table-inverse'>
  <tbody>
  <% @books.each do |book| %>
  <tr>
<td>
    <%= link_to book_path(book.id) do %>
    <%= image_tag book.user.get_profile_image(80,80) %>
    <% end %>
</td>
<td>
    <%= link_to book_path(book.id) do %>
    <%= book.title %>  <% end %>
</td>
<td><%= book.body %>
</td>
</tr>
<% end %>
  </tbody>
</table>
</div>
</div>
</div>
 </main>